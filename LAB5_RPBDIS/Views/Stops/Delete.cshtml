@model RailwayTrafficSolution.Models.Stop

@{
    ViewData["Title"] = "Удаление";
}

<h3>Вы уверены, что хотите удалить эту запись?</h3>
<div>
    <h4>Остановка</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsRailwayStation)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.IsRailwayStation == true)
            {
                <p>Да</p>
            }
            else
            {
                <p>Нет</p>
            }
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.HasWaitingRoom)
        </dt>
        <dd class = "col-sm-10">
            @if (Model.HasWaitingRoom == true)
            {
                <p>Да</p>
            }
            else
            {
                <p>Нет</p>
            }
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="StopId" />
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Назад к списку</a>
    </form>
</div>
