@model LAB5_RPBDIS.Models.Stop

@{
    ViewData["Title"] = "Редактирование";
}

<h1>Редактирование: остановка</h1>

<h4>Stop</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="StopId" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsRailwayStation" class="control-label"></label>
                <input asp-for="IsRailwayStation" class="form-control" />
                <span asp-validation-for="IsRailwayStation" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="HasWaitingRoom" class="control-label"></label>
                <input asp-for="HasWaitingRoom" class="form-control" />
                <span asp-validation-for="HasWaitingRoom" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Назад к списку</a>
</div>
