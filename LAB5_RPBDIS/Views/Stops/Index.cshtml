@model IEnumerable<RailwayTrafficSolution.Models.Stop>

@{
    ViewData["Title"] = "Остановки";
    string isRailwayStationValue = ViewData["IsRailwayStation"] as string;
    string hasWaitingRoomValue = ViewData["HasWaitingRoom"] as string;
}

<h1>Остановки</h1>

<p>
    <a asp-action="Create">Добавить новую запись</a>
</p>
<p>
    Укажите данные для фильтрации
</p>
<form method="get" action="@Url.Action("Index")">
    <div class="form-group">
        <label for="isRailwayStation">ЖД станция:</label>
        <select class="form-control" id="isRailwayStation" name="isRailwayStation">
            <option value="trueadnfalse">Да и Нет</option>
            <option value="true">Да</option>
            <option value="false">Нет</option>
        </select>
    </div>
    <div class="form-group">
        <label for="hasWaitingRoom">Зал ожидания:</label>
        <select class="form-control" id="hasWaitingRoom" name="hasWaitingRoom">
            <option value="trueadnfalse">Да и Нет</option>
            <option value="true">Да</option>
            <option value="false">Нет</option>
        </select>
    </div>
    <button type="submit" class="btn btn-primary">Отфильтровать</button>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsRailwayStation)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HasWaitingRoom)
            </th>
            @if (User.IsInRole("MainAdmin") || User.IsInRole("Admin"))
            {
                <th></th>
            }
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @if (item.IsRailwayStation ==true)
                    {
                        <p>Да</p>
                    }
                    else
                    {
                        <p>Нет</p>
                    }
                </td>
                <td>
                    @if (item.HasWaitingRoom == true)
                    {
                        <p>Да</p>
                    }
                    else
                    {
                        <p>Нет</p>
                    }
                </td>
                @if (User.IsInRole("MainAdmin") || User.IsInRole("Admin"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.StopId">Редактировать</a> |
                        <a asp-action="Details" asp-route-id="@item.StopId">Подробно</a> |
                        <a asp-action="Delete" asp-route-id="@item.StopId">Удалить</a>
                    </td>
                }
            </tr>
        }
    </tbody>
</table>

<script>
    // Получение элементов селектов
    var isRailwayStationSelect = document.getElementById("isRailwayStation");
    var hasWaitingRoomSelect = document.getElementById("hasWaitingRoom");

    // Установка выбранного значения для селекта "ЖД станция"
    for (var i = 0; i < isRailwayStationSelect.options.length; i++) {
        if (isRailwayStationSelect.options[i].value === "@isRailwayStationValue") {
            isRailwayStationSelect.options[i].selected = true;
            break;
        }
    }

    // Установка выбранного значения для селекта "Зал ожидания"
    for (var j = 0; j < hasWaitingRoomSelect.options.length; j++) {
        if (hasWaitingRoomSelect.options[j].value === "@hasWaitingRoomValue") {
            hasWaitingRoomSelect.options[j].selected = true;
            break;
        }
    }
</script>