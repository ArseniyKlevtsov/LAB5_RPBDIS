@model IEnumerable<LAB5_RPBDIS.Models.Position>

@{
    ViewData["Title"] = "Должности";
}

<h1>Должность</h1>

<p>
    <a asp-action="Create">Добавить новую запись</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Дожность
            </th>
            <th>
                Заработная плата ($)
            </th>
            @if (User.IsInRole("MainAdmin") || User.IsInRole("Admin"))
            {
                <th></th>
            }
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PositionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SalaryUsd)
            </td>
            @if (User.IsInRole("MainAdmin") || User.IsInRole("Admin"))
            {
                <td>
                    <a asp-action="Edit" asp-route-id="@item.PositionId">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.PositionId">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.PositionId">Delete</a>
                </td>
            }
        </tr>
}
    </tbody>
</table>
